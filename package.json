{
  "name": "waha-agent-cf",
  "version": "1.0.0",
  "description": "多租户 WhatsApp 智能客服平台",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "wrangler dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "bun run typecheck:backend",
    "build:frontend": "cd frontend && bun run build",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:push:local": "wrangler d1 execute waha-agent --local --file=database/migrations/0000_better_auth_clean.sql",
    "db:push:remote": "wrangler d1 execute waha-agent --file=database/migrations/0000_cooing_blizzard.sql",
    "db:seed": "bun run scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "format": "biome format . --write",
    "typecheck": "bun run typecheck:backend && bun run typecheck:frontend",
    "typecheck:backend": "tsc --noEmit",
    "typecheck:frontend": "cd frontend && tsc --noEmit"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@hono/zod-validator": "^0.7.2",
    "better-auth": "^1.3.8",
    "better-auth-cloudflare": "^0.2.4",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.13",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5.3.3",
    "wrangler": "^3.95.0"
  }
}
